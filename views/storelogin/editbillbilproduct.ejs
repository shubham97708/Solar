    <!-- CSS Files -->
    <link href="/assets/css/material-dashboard.css?v=2.1.0" rel="stylesheet" />
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
    
</head>

<body class="">
    <div class="wrapper ">
        <div class="content">
            <div class="container-fluid">
                <div class="row">
                   
                        <div class="col-md-12">
                            <div class="card">
                                <div class="card-header card-header-danger">
                                    <h4 class="card-title ">Edit Your Bill</h4>
                                    <h1 class="card-category">Invoice No. <%= bill[0].id %> </h1>
                                  
                                </div>
                                




                    <h2 id="header"></h2>

                    <div class="table-responsive">
                    </div>



                    <table class="table" id="myTable"></table>

                    <table class="table">


                        <thead class=" text-primary">
                            
                            <th>
                                Date.
                            </th>
                            <th>
                                Store-Name
                            </th>
                            <th>
                                Cutomer-Name
                            </th>
                            <th>
                                Mobile-No.
                            </th>
                            <th>
                                Card-No.
                            </th>
                            <th>
                                Payment-Type
                            </th>
                            <th>
                                Finance
                            </th>
                            <th>
                                DownPayment
                            </th>
                            <th>
                                FinanceAmount
                            </th>
                            <th>
                                Edit
                            </th>
                            

                        </thead>
                        <form action="/sold/editbillbyid" method="POST">
                        <% bill.map(function(item,key){ %>
                        <tbody>
                            
                            

                             <!-- Edit Bill --> 
                                
                                <td><% 
                                                    
                                                    var rawstr = item.date_register;
                                                    var str =rawstr.toString();
                                                    var rawdate = str.split(' ');
                                                    var finaldate = rawdate[2]+"-"+rawdate[1]+"-"+rawdate[3]
                                                    
                                                    %>
                                    <b><%= finaldate %></b>
                                </td>
                                <td><%= item.storename %></td>
                                <input type="text" name="billid" class="form-control" value="<%= item.id %>" hidden />
                                <td><input type="text" name="cname" class="form-control" value="<%= item.cname %>" /></td>
                                <td><input type="text" name="cmobile" class="form-control" value="<%= item.cmobile %>" /></td>
                                <td><input type="text" name="ccard" class="form-control" value="<%= item.ccard %>" /></td>
                                <td><input type="text" name="paytype" class="form-control" value="<%= item.paytype %>" /></td>
                                <td><input type="text" name="fcname" class="form-control" value="<%= item.fcname %>" /></td>

                                <td><input type="text" name="downpayment" class="form-control" value="<%= item.downpayment %>" /></td>
                                <td><input type="text" name="financeamount" class="form-control" value="<%= item.financeamount %>" /></td>


                                <td><input type="submit" value="Edit" /></td>
                                


                            </tr>
                        </form>
                        </tbody>



                        <% }); %>


                    </table>

                    <table class="table">

                        <thead>                            
                            <th>Sr.</th>
                            <th>Product.</th>
                            <th>Brand.</th>
                            <th>Model-Name.</th>  
                            <th>Model-No.</th> 
                            <th>Color</th> 
                            <th>Price</th>
                            <th>IMEI</th>
                            <th>Edit</th>                                                                  
                        </thead>
                      
                      <!-- Edit Bill-Product -->                     
                <tbody>
                    <form action="/sold/editbillproductbyid" method="POST">
                    <% billproduct.map(function(item,key){ %>
                    <tr>
                        <td><%= key+1 %></td>
                        <input type="text" name="productid" value="<%= item.id %>" hidden  />
                        

                        <td><input type="text" name="ptype" class="form-control" value="<%= item.ptype %>" /></td>
                        <td><input type="text" name="brandname" class="form-control" value="<%= item.brandname %>" /></td>
                        <td><input type="text" name="modelname" class="form-control" value="<%= item.modelname %>" /></td>
                        <td><input type="text" name="modelno" class="form-control" value="<%= item.modelno %>" /></td>
                        <td><input type="text" name="color" class="form-control" value="<%= item.color %>" /></td>
                        <td><input type="text" name="price" class="form-control" value="<%= item.price %>" /></td>
                        <td><input type="text" name="imeimob" class="form-control" value="<%= item.imeimob %>" /></td>
                        <td><input type="submit" value="Edit" /></td>
                        
                    </tr>
                    <% }); %>
                    </form>
                </tbody>
                


                    </table>

                </div>

            </div>
        </div>
    </div>
    </div>
    </div>
    </div>
    </div>
    </div>
    <footer class="footer">
        <div class="container-fluid">
            <div class="copyright float-right">
                &copy;
                &nbsp;Devloped By SHUBHAM SONI
            </div>
        </div>
    </footer>

    </div>
